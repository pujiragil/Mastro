<style lang="scss" scoped>
	.container {
		width: 100vw;
		min-height: 100vh;
		display: flex;
		padding: 20px;
		justify-content: flex-start;
		align-items: center;
		flex-direction: column;
		background: #1f1f1f;
		color: #f5f5f5;
	}

	.heading--wrapper {
		margin-bottom: 20px;
		width: 100%;
		text-align: left;
		
		p {
			font-size: 1.5rem;
			font-weight: bold;
		}
	}

	p {
		text-transform: lowercase;
		margin-bottom: 1rem;
		font-weight: 600;
	}

	.link--wrapper {
		display: flex;
		justify-content: center;
		align-items: center;
		column-gap: 10px;
	
		a {
			color: #fff;
			font-size: 14px;
			padding-bottom: 5px;
			text-decoration: none;
			border-bottom: 1px solid white;
		}
	}

	.thumbnail {
		margin-top: 2rem;
		width: 40%;

		img {
			width: 100%;
			object-fit: cover;
			border-radius: 20px;
			opacity: .7;
		}
	}

	.content {
		margin-top: 4rem;
		width: 50%;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;

		p {
			font-weight: 300;
		}

	}
