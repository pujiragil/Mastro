---
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title}>
  <div class="container">
    <div class="content">
      <h1 class="title">{frontmatter.descriptions}</h1>
      <p class="author">{frontmatter.author}</p>
      <p class="date">{frontmatter.date}</p>
      <slot />
    </div>
  </div>
</BaseLayout>
<style type="scss" is:global>
  .container {
    width: 100vw;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  img {
    margin-bottom: 1rem;
  }

  .content {
    width: 50%;
    color: #282828;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
  }

  .title {
    font-size: 1.5rem;
  }

  .author, .date {
    font-size: 14px;
    font-weight: 400;
    color: gray;
  }

  .date {
    margin-bottom: 1rem;
  }

  .text {
    font-size: 14px;
    margin-bottom: 1rem;
  }
</style>
